option_b_alignment = 1
option_b_shift = 5
option_b_result_text = "The roots twist and darken, thorns sprouting along their length. They bend to your will. Your Grimoire's binding tightens as dark veins spread across its cover."
option_c_text = "Integrate with the roots, letting nature and knowledge become one."
option_c_alignment = 2
option_c_shift = 5
